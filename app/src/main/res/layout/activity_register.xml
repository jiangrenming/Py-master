<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_alignParentBottom="true"

    android:layout_marginBottom="5dp"
    android:layout_weight="0.1"
    android:gravity="bottom">

    <TextView
    android:id="@+id/tv1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="上海羽琪网络科技有限公司"
    android:textColor="@color/gray1"
    android:textSize="10dp" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="COPYRIGHT 2012-2017 沪ICP备17007398号-1"
    android:textColor="@color/gray1"
    android:textSize="10dp"
    android:layout_alignParentTop="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.28">

            <ImageView
                android:id="@+id/Close_login"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:src="@mipmap/xx"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/im1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/m_py"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/Verify_password"
            android:layout_weight="0.67">

            <RelativeLayout
                android:id="@+id/rll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/zhz"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="3dp"
                    android:text="公司"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/zc_lishugongsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/zhz"
                    android:background="@null"
                    android:hint="请输入隶属公司"
                    android:singleLine="true"
                    android:textColor="@color/yellow1"
                    android:textColorHint="@color/gray2" />

            </RelativeLayout>

            <View
                android:id="@+id/vv"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rll"
                android:background="@color/yellow1" />

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vv"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/zh1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="账号"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/zc_shoujihao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/zh1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/yellow1"
                    android:textColorHint="@color/gray2" />

            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl1"
                android:background="@color/yellow1" />


            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/mm1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="密码"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/zc_mima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/mm1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/yellow1"
                    android:textColorHint="@color/gray2" />

            </RelativeLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl2"
                android:background="@color/yellow1" />

            <RelativeLayout
                android:id="@+id/rl_invitation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_rl_invitation_code"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="邀请码"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_invitation_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_rl_invitation_code"
                    android:background="@null"
                    android:hint="请输入邀请码"
                    android:singleLine="true"
                    android:textColor="@color/yellow1"
                    android:textColorHint="@color/gray2" />
            </RelativeLayout>

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_invitation_code"
                android:background="@color/yellow1" />


            <RelativeLayout
                android:id="@+id/rl_auth_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/v3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/tv_rl_auth_code"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="验证码"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_auth_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_rl_auth_code"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textColor="@color/yellow1"
                    android:textColorHint="@color/gray2" />
                <Button
                    android:onClick="getCodeClick"
                    android:id="@+id/btn_captcha"
                    android:textColor="@color/white1"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/yellow1"
                    android:text="点击获取验证码"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <View
                android:id="@+id/v4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_auth_code"
                android:background="@color/yellow1" />


            <TextView
                android:id="@+id/zc_zhuce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v4"
                android:layout_marginTop="5dp"
                android:background="@color/yellow1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onLayoutClick"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="注册"
                android:textColor="@color/white1"
                android:textSize="20dp" />

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zc_zhuce"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/zc_laoyonghu"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:onClick="onLayoutClick"
                    android:padding="4dp"
                    android:text="老用户账号"
                    android:textColor="@color/yellow1"
                    android:textSize="14dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rl3">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/gray1" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="50dp"
                    android:layout_height="17dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="OR"
                    android:textColor="@color/gray1"
                    android:layout_weight="0.19" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/gray1" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_weight="0.04"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="上海羽琪网络科技有限公司"
                android:textColor="@color/gray1"
                android:textSize="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="COPYRIGHT 2012-2017 沪ICP备17007398号-1"
                android:textColor="@color/gray1"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

